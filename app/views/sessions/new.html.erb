<div class=container2>

<h2>Sign In</h2>

<%= form_tag "/sessions" do  %>

  <p><%= label_tag :email %></p>
  <p><%= text_field_tag :email, '', autofocus: true, size: 40, required: true %></p>
  <p><%= label_tag :password %></p>
  <p><%= password_field_tag :password, '', size: 40, required: true %></p>
  <p><%= link_to "(forgot password)", new_password_reset_path %></p>
  <p><%= submit_tag "Sign In", class: "form_button"  %></p>

<% end %>

</div>