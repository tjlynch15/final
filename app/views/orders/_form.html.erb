
<%= form_for(@order, url: new_order_url do |f| %>

  <%= hidden_field_tag :email, @user.email %>

  <p><%= f.address :address %></p>
  <p><%= f.address_field :address %></p>

  <p><%= f.label :total_amount, "Amount" %></p>
  <p><%= f.total_field :total_amount %></p>

  <p><%= f.submit "Submit_Order", class: "form_button" %></p>
<% end %>