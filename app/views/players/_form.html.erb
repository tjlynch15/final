<%= @player.errors.full_messages %>

<%= form_for @player do |form| %>

  <p><%= form.label :name %>
  <br>
  <%= form.text_field :name, size: 80, autofocus: true, required: true %></p>

  <p><%= form.label :number %>
  <br>
  <%= form.text_field :number %></p>
  
  <p><%= form.label :position %>
  <br>
  <%= form.text_field :position %></p>


  <p><%= form.label :height %>
  <br>
  <%= form.text_field :height %></p>


  <p><%= form.label :weight %>
  <br>
  <%= form.text_field :weight %></p>

  <p><%= form.label :age %>
  <br>
  <%= form.text_field :age %></p>

  <p><%= form.label :birthplace %>
  <br>
  <%= form.text_field :birthplace, size: 80 %></p>


  <%= form.label :image_url,  "Link to player URL" %>
  <br>
  <%= form.text_field :image_url %>


  <p><%= form.label :acquired %>
  <br>
  <%= form.text_field :acquired, size: 80 %></p>

  <p><%= form.label :drafted %>
  <br>
  <%= form.text_field :drafted, size: 80 %></p>


  <%= form.label :round %>
  <br>
  <%= form.text_field :round, size: 80 %>
  <br>
  <br>
  

  <%= form.submit :class => 'form_button' %>

<% end %>




