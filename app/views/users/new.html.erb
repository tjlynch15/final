<div class=container2>

<h2>Sign Up</h2>

<%= form_for @user do |f| %>

  <p><%= f.label :name %></p>
  <p><%= f.text_field :name, size: 40, autofocus: true, required: true %></p>
  <p><%= f.label :email %></p>
  <p><%= f.text_field :email, size: 40, required: true %></p>
  <p><%= f.label :password %></p>
  <p><%= f.password_field :password, size: 40, required: true %></p>
  <p><%= f.label :password_confirmation %></p>
  <p><%= f.password_field :password_confirmation, size: 40, required: true %></p>
  <p><%= f.submit "Sign Up", :class => 'form_button' %></p>

<% end %>

</div>